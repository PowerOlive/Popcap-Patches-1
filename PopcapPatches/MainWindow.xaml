<Window
  x:Class="PopcapPatches.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:PopcapPatches"
  mc:Ignorable="d"
  ResizeMode="CanMinimize"
  WindowStartupLocation="CenterScreen"
  Title="Popcap Patches"
  SizeToContent="Height"
  Height="400"
  Width="400"
  AllowDrop="True"
  Drop="Window_Drop">
  <Window.Resources>
    <Style
      x:Key="{x:Type Button}"
      TargetType="Button">
      <Setter
        Property="Background"
        Value="#2888"></Setter>
      <Setter
        Property="BorderThickness"
        Value="0"></Setter>
      <Setter
        Property="Padding"
        Value="16, 8"></Setter>
      <Setter
        Property="Margin"
        Value="16, 8"></Setter>
      <Setter
        Property="Cursor"
        Value="Hand"></Setter>
    </Style>
    <Style
      x:Key="{x:Type CheckBox}"
      TargetType="CheckBox">
      <Setter
        Property="Margin"
        Value="0, 6"></Setter>
    </Style>
  </Window.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition
        Width="Auto"></ColumnDefinition>
      <ColumnDefinition
        Width="1*"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition
        Height="1*"></RowDefinition>
      <RowDefinition
        Height="Auto"></RowDefinition>
      <RowDefinition
        Height="Auto"></RowDefinition>
      <RowDefinition
        Height="3*"></RowDefinition>
    </Grid.RowDefinitions>
    <TextBlock
      Grid.ColumnSpan="2"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      FontWeight="Bold"
      FontSize="18"
      TextWrapping="Wrap"
      Margin="16, 24"
      Text="{Binding Filename}">
    </TextBlock>
    <StackPanel
      Grid.Row="1"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Orientation="Vertical">
      <Button
        IsEnabled="{Binding NotBusy}"
        x:Name="buttonOpenFile"
        Click="buttonOpenFile_Click">Open file</Button>
      <Button
        FontWeight="Bold"
        IsEnabled="{Binding CanPatch}"
        x:Name="buttonPatch"
        Click="buttonPatch_Click">Patch</Button>
    </StackPanel>
    <StackPanel
      Grid.Row="1"
      Grid.Column="1"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Orientation="Vertical">
      <TextBlock
        Margin="0,0,0,6">
        Options
      </TextBlock>
      <CheckBox
        IsEnabled="{Binding NotBusy}"
        IsChecked="{Binding RemoveVideoMemoryCheck}">Remove video memory check</CheckBox>
      <CheckBox
        IsEnabled="{Binding NotBusy}"
        IsChecked="{Binding RemoveVideoCardCheck}">Remove video card check</CheckBox>
    </StackPanel>
    <Expander
      Grid.Row="2"
      Grid.ColumnSpan="2"
      HorizontalAlignment="Stretch"
      Margin="16, 8"
      Header="Advanced Options"
      IsExpanded="False"
      ExpandDirection="Down">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition />
          <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.Resources>
          <Style
            x:Key="{x:Type TextBox}"
            TargetType="TextBox">
            <Setter
              Property="FontFamily"
              Value="Consolas" />
            <Setter
              Property="Padding"
              Value="4" />
            <Setter
              Property="Margin"
              Value="0, 0, 4, 4" />
            <Setter
              Property="MinWidth"
              Value="24" />
            <Setter
              Property="TextWrapping"
              Value="Wrap" />
            <Setter
              Property="AcceptsReturn"
              Value="True" />
          </Style>
        </Grid.Resources>
        <StackPanel
          Orientation="Vertical">
          <TextBlock
            Margin="0,8,0,4">
            Signature Check Pattern:
          </TextBlock>
          <WrapPanel
            Orientation="Horizontal">
            <TextBox
              Text="{Binding SignatureCheckLeft}"></TextBox>
            <TextBox
              MaxLength="2"
              AcceptsReturn="False"
              Text="{Binding SignatureCheckCenter}"></TextBox>
            <TextBox
              Text="{Binding SignatureCheckRight}"></TextBox>
          </WrapPanel>
        </StackPanel>
        <StackPanel
          Grid.Row="1"
          Orientation="Vertical">
          <TextBlock
            Margin="0,4,0,4">
            Video Memory Check Pattern:
          </TextBlock>
          <WrapPanel
            Orientation="Horizontal">
            <TextBox
              Text="{Binding VideoMemoryCheckLeft}"></TextBox>
            <TextBox
              MaxLength="2"
              AcceptsReturn="False"
              Text="{Binding VideoMemoryCheckCenter}"></TextBox>
            <TextBox
              Text="{Binding VideoMemoryCheckRight}"></TextBox>
          </WrapPanel>
        </StackPanel>
        <StackPanel
          Grid.Row="2"
          Orientation="Vertical">
          <TextBlock
            Margin="0,4,0,4">
            Video Card Check Pattern:
          </TextBlock>
          <WrapPanel
            Orientation="Horizontal">
            <TextBox
              Text="{Binding VideoCardCheckLeft}"></TextBox>
            <TextBox
              MaxLength="2"
              AcceptsReturn="False"
              Text="{Binding VideoCardCheckCenter}"></TextBox>
            <TextBox
              Text="{Binding VideoCardCheckRight}"></TextBox>
          </WrapPanel>
        </StackPanel>
      </Grid>
    </Expander>
    <Grid
      Height="160"
      Grid.Row="3"
      Grid.ColumnSpan="2">
      <TextBlock
        VerticalAlignment="Bottom"
        Margin="16"
        TextWrapping="Wrap"
        Text="{Binding Log}">
      </TextBlock>
    </Grid>
  </Grid>
</Window>
